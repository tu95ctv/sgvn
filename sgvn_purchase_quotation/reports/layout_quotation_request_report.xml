<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_quotation_request_standard">
        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div t-if="1">
                <div class="row">
                    <div class="col-12" style="text-align:center;font-weight:1000;font-size:22px;">
                        <b>REQUEST FOR QUOTATION</b>
                    </div>
                </div>
                <div  style="margin-top: 10px;" class="text-right">
                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%B %d, %Y')" style="margin-right:5em;"/>
                </div>
            </div>
            <div class="row">
                <div class="col-12" style="margin-top: 10px">
                    <div  style="margin-left:20em;display: inline-block; " class="d-flex">
                        <div >
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 65px;" alt="Logo"/>
                            
                        </div>
                        <div name="company_address" style="margin-left:5px;line-height:1.2;" class="text-center">
                            <div><b t-field="company.name"></b></div>
                    <div t-esc="company.partner_id._display_address(True)" />
                            <div style="font-size:16px">
                                <div>
                                    TEL: <span t-esc="company.phone"/>
                                </div>
                                <div>
                                    FAX: 0859-38-3452
                                </div>
                                </div>
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="d-flex">
                <hr  width="30%" size="5px" align="left" style="border-top: 1px solid black;" /><span class="text-left"></span>
            </div>
            <span>Request a quote for the following products</span>
            <div class="pt-5">
                <!-- This div ensures that the address is not cropped by the header. -->
                <t t-call="web.address_layout"/>
            </div>
            <t t-raw="0"/>
        </div>

        <div t-attf-class="o_company_#{company.id}_layout footer o_background_footer">
            <div class="text-center">
                <ul class="list-inline">
                    <li t-if="company.website" class="list-inline-item"><i class="fa fa-globe" role="img" aria-label="Website" title="Website"/> <span t-field="company.website"/></li>
                </ul>
                <div t-field="company.report_footer"/>
                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page:
                    <span class="page"/>
                    of
                    <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

    <template id="external_layout_quotation_request">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <t t-if="1" t-call="sgvn_purchase_quotation.external_layout_quotation_request_standard">
            <t t-raw="0"/>
        </t>
    </template>
</odoo>
