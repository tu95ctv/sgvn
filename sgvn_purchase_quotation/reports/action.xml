<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="paperformat_purchasequotation_a4" model="report.paperformat">
            <field name="name">Format A4 FOR PURCHASE QUOTATION</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">10</field>
            <field name="dpi">90</field>
        </record>

        <report 
            id="action_report_purchasequotation"
            string="Quotation request form"
            model="purchase.order" 
            report_type="qweb-pdf"
            file="sgvn_purchase_quotation.report_purchasequotation" 
            name="sgvn_purchase_quotation.report_purchasequotation"
            print_report_name="object.name"
            paperformat="sgvn_purchase_quotation.paperformat_purchasequotation_a4"
        />

        <report 
            id="action_report_estimate_request"
            string="Quotation request form &lt;for construction&gt;"
            model="purchase.order" 
            report_type="qweb-pdf"
            file="sgvn_purchase_quotation.report_estimate_request" 
            name="sgvn_purchase_quotation.report_estimate_request"
            print_report_name="object.name"
            paperformat="sgvn_purchase_quotation.paperformat_purchasequotation_a4"
        />
</odoo>