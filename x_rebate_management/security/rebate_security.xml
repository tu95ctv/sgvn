<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <record model="ir.rule" id="rebate_organiztion_manager">
            <field name="name">Rebate organization: Manager</field>
            <field name="model_id" ref="model_x_partner_rebate"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('x_security_groups.group_account_head'))]"/>
        </record>

        <record model="ir.rule" id="rebate_organiztion_user">
            <field name="name">Rebate organization: User</field>
            <field name="model_id" ref="model_x_partner_rebate"/>
            <field name="domain_force">['|',('x_organization_id','=',False),('x_organization_id','=',user.x_organization_id.id)]</field>
        </record>

        <record model="ir.rule" id="rebate_organiztion_multi_company">
            <field name="name">Rebate organization Multi Company</field>
            <field name="model_id" ref="model_x_partner_rebate"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>