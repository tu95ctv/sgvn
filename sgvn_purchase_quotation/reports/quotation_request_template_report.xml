<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_purchasequotation_document">
    <t t-call="sgvn_purchase_quotation.external_layout_quotation_request">
        <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
        <div class="page">
            <div class="oe_structure"/>

            <h2><span t-field="o.name"/></h2>
            <div class="row">
                <div class="col-4">
                    <div><b>Requested delivery date:</b> <span t-esc="o.date_planned and o.date_planned.strftime('%B %d, %Y') or ''"/></div>
                    <div><b>Response date: </b><span t-esc="o.date_response and o.date_response.strftime('%B %d, %Y') or ''"/></div>
                </div>
                <div class="col-8">
                    <div style="margin-left:5em;"><b>Purchasing Managers:</b> <span t-esc="o.partner_id.parent_id and '%s - '%(o.partner_id.parent_id.name) or ''"/><span t-esc="o.partner_id.name"/></div>
                </div>
            </div>
            
            <div style="margin-top: 10px"><span>Quotation request details</span></div>
            <table class="table table-sm">
                <thead>
                    <tr style="background-color:#f2f2f2;">
                        <th name="th_description"><strong>Product code</strong></th>
                        <th name="th_expected_date" ><strong>Product name</strong></th>
                        <th name="th_destination" ><strong>Delivery destination</strong></th>
                        <th name="th_quantity" ><strong>Delivery destination</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="o.order_line" t-as="order_line">
                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if order_line.display_type == 'line_section' else 'font-italic o_line_note' if order_line.display_type == 'line_note' else ''">
                            <t t-if="not order_line.display_type">
                                <td id="product">
                                    <span t-field="order_line.product_id.default_code"/>
                                </td>
                                <td>
                                    <span t-field="order_line.product_id.name"/>
                                </td>
                                <td>
                                    <span t-field="order_line.delivery_destination_id"/>
                                </td>
                                <td>
                                    <span t-field="order_line.product_qty"/>
                                    <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                </td>
                            </t>
                            <t t-else="">
                                <td colspan="99" id="section">
                                    <span t-field="order_line.name"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>

            <div>
                <b>Remarks</b>
                <p t-field="o.notes"/>
                <p t-field="o.notes"/>
            </div>
            <div>
                <b>Direct shipping information</b>
                <p t-field="o.dest_address_infor"/>
            </div>

            <div class="oe_structure"/>
        </div>
    </t>
</template>

<template id="report_purchasequotation">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="sgvn_purchase_quotation.report_purchasequotation_document" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>
</odoo>
