<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="res_partner_inherit_form">
        <field name="name">res.partner.inherit.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mobile']" position="before">
                <field name="x_fax_number"/>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="organization_id"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="x_name_furigana"/>
            </xpath>
            <xpath expr="//field[@name='type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="x_is_branch"/>
                <field name="x_branch_name" attrs="{'invisible': [('x_is_branch', '=', False)]}"/>
            </xpath>
            <!-- <xpath expr="//field[@name='email']" position="before">
                <field name="x_is_branch"/>
                <field name="x_branch_name" attrs="{'invisible': [('x_is_branch', '=', False)]}"/>
            </xpath> -->
            
            <xpath expr="//field[@name='type']" position="before">
                <field name="x_partner_categ" widget="radio" options="{'horizontal': true}"/>
                <field name="x_transaction_categ" widget="many2many_checkboxes"/>
                <field name="x_transaction_department" widget="many2many_tags" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                <field name="ref" widget="many2many_tags" string="Customer code"/>
                
            </xpath>
            <xpath expr="//field[@name='function']" position="attributes">
                <attribute name="attrs">{
                    'invisible': [('x_contact_categ.has_function', '=', 'no')],
                    'required': [('x_contact_categ.has_function', '=', 'required')]
                }</attribute>
            </xpath>
            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="attrs">{
                    'invisible': [('x_contact_categ.has_phone', '=', 'no')],
                    'required': [('x_contact_categ.has_phone', '=', 'required')]
                }</attribute>
            </xpath>
            <xpath expr="//field[@name='mobile']" position="attributes">
                <attribute name="attrs">{
                    'invisible': [('x_contact_categ.has_mobile', '=', 'no')],
                    'required': [('x_contact_categ.has_mobile', '=', 'required')]
                }</attribute>
            </xpath>
            <!-- <xpath expr="//field[@name='parent_id']" position="attributes">
                <attribute name="attrs">{
                    'invisible': [('x_contact_categ.has_parent', '=', 'no')],
                    'required': [('x_contact_categ.has_parent', '=', 'required')]
                }</attribute>
            </xpath> -->
        </field>
    </record>
</odoo>